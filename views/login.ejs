<%- include('partials/header') %>

  <div class="login-form-card">
    <div class="login-form-inner">
      <h3 class="fw-bold mb-4 login-title">Sign in</h3>
      <button id="google-login" class="social-btn w-100 mb-2">
        <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/google/google-original.svg" alt="Google" width="22" height="22">
        Continue with Google
      </button>
      <div class="or-divider">OR</div>
      <form action="/login" method="POST" autocomplete="off">
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" class="login-control" id="email" name="username" required autofocus />
        </div>
        <div class="mb-3 position-relative">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" id="password" name="password" required />
          <!-- Optional: Add show/hide password icon here -->
        </div>
        <div class="d-flex justify-content-end mb-3">
          <a href="#" class="text-muted" style="font-size:0.95rem;">Forget your password</a>
        </div>
        <button type="submit" class="btn btn-login btn-lg w-100">Sign in</button>
      </form>
      <div class="login-links">
        Don't have an account? <a href="/signup">Sign up</a>
      </div>
    </div>
  </div>

<script src="/index.js"></script>

<%- include('partials/footer') %>
